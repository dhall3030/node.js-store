{{#if products}}



<div class="row">

	<h1>Your Cart</h1>
	
	

		<ul>
			{{# each products}}

				<div class="panel">
					
					<div class="prod-container group"> 
		
					<div class="prod-img">
						
								{{#if this.item.imagePath}}
								<img style="width: 150px" src="{{this.item.imagePath}}" alt="">
								{{/if}}


					</div>

					<div>
						<ul>
							<li>
								
								<strong>{{this.item.title}}</strong>
								
								
							</li>
							<li>
								
								<strong>{{this.item.description}}</strong>

							</li>
						</ul>
					</div>

					<div><span>${{this.price}}</span></div>
			
					<div>
						
							<ul class="actions group">
								<li><a href="/reduce/{{this.item._id}}"><i class="fa fa-minus-circle"></i></a></li>
								<li><span class="badge">{{this.qty}}</span></li>
								<li><a href="/increase/{{this.item._id}}"><i class="fa fa-plus-circle"></i></a></li>

								<li>&nbsp;&nbsp;<a href="/remove/{{this.item._id}}"><i class="fa fa-trash"></i></a></li>
							</ul>

					</div>



				</div>

				</div>
				
				



				




			{{/each}}

			



		</ul>



	



</div>

<div class="row">
	
		<hr>

		<strong>Total: {{ totalPrice }}</strong>

	


</div>

<div>
	
	

		<a href="/checkout" class="btn">checkout</a> 



	


</div>
{{else}}



<div class="row">
	
	

		
		<h2>No Items in Cart</h2>


	


</div>

{{/if}}